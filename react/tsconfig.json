{
  "extends": "@vtex/tsconfig",
  "compilerOptions": {
    "noEmitOnError": false,

    "lib": [
      "dom"
    ],

    "typeRoots": [
      "node_modules/@types"
    ],

    "types": [
      "node",
      "jest"
    ],

    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "jsx": "react"
  },
  "include": [
    "./typings/*.d.ts",
    "./**/*.tsx",
    "./**/*.ts"
  ]
}